<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/locationContainer"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_8_dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/dimen_0_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="@dimen/dimen_54_dp"
                    android:layout_height="@dimen/dimen_54_dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:src="@mipmap/baseline_menu_black_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/dimen_8_dp"
                    android:paddingEnd="@dimen/dimen_8_dp"
                    android:text="@string/sample_my_location"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/address"
                    app:layout_constraintStart_toEndOf="@id/btnMenu"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="@dimen/dimen_16_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/dimen_8_dp"
                    android:paddingEnd="@dimen/dimen_8_dp"
                    android:text="@string/sample_address"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/material_grey_900"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/my_location"
                    app:layout_constraintStart_toEndOf="@id/btnMenu"
                    app:layout_constraintTop_toBottomOf="@id/my_location" />

                <ImageButton
                    android:id="@+id/chevron"
                    android:layout_width="@dimen/dimen_54_dp"
                    android:layout_height="@dimen/dimen_54_dp"
                    android:contentDescription="@null"
                    android:rotation="270"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/baseline_arrow_back_ios_black_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/my_location"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearch"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="@dimen/dimen_54_dp"
                    android:layout_height="@dimen/dimen_54_dp"
                    android:contentDescription="@null"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@mipmap/baseline_search_black_24"
                    app:iconSize="@dimen/dimen_28_dp"
                    app:rippleColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:iconTint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gitHubBanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16_dp"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:layout_marginEnd="@dimen/dimen_16_dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:cardBackgroundColor="#f6f8fe"
            app:cardCornerRadius="@dimen/dimen_12_dp"
            app:cardElevation="@dimen/dimen_2_dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toTopOf="@id/listOffers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sample_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="@dimen/dimen_16_dp"
                    android:drawableEnd="@drawable/emoji_fire"
                    android:padding="@dimen/dimen_10_dp"
                    android:text="@string/sample_github_banner"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/banner"
                    app:layout_constraintEnd_toStartOf="@id/banner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/banner" />


                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="@dimen/dimen_108_dp"
                    android:layout_height="@dimen/dimen_108_dp"
                    android:layout_margin="@dimen/dimen_16_dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:tint="@color/rich_black"
                    android:src="@drawable/about_icon_github"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOffers"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/header_filters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gitHubBanner"
            tools:itemCount="7"
            tools:listitem="@layout/item_restaurant_offers" />

        <TextView
            android:id="@+id/header_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:fontFamily="@font/"
            android:padding="@dimen/dimen_16_dp"
            android:text="@string/sample_filters"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listOffers" />

        <HorizontalScrollView
            android:id="@+id/containerMenus"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/header_restaurants_browse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_filters">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/promotions"
                    android:layout_width="@dimen/dimen_56_dp"
                    android:layout_height="@dimen/dimen_56_dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/megaphone"
                    android:tint="@color/white"
                    app:backgroundTint="@color/material_green_500"
                    app:layout_constraintEnd_toEndOf="@id/txtPromotions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtPromotions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:text="Promotions"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/txtFavs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/promotions" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/favs"
                    android:layout_width="@dimen/dimen_56_dp"
                    android:layout_height="@dimen/dimen_56_dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/star"
                    android:tint="@color/white"
                    app:backgroundTint="@color/sky_blue"
                    app:layout_constraintEnd_toEndOf="@id/txtFavs"
                    app:layout_constraintStart_toStartOf="@id/txtFavs"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtFavs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:text="Favourites"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/rich_black"
                    app:layout_constraintEnd_toStartOf="@id/txtFast"
                    app:layout_constraintStart_toEndOf="@id/txtPromotions"
                    app:layout_constraintTop_toBottomOf="@id/favs" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fast"
                    android:layout_width="@dimen/dimen_56_dp"
                    android:layout_height="@dimen/dimen_56_dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/time"
                    android:tint="@color/white"
                    app:backgroundTint="@color/material_amber_500"
                    app:layout_constraintEnd_toEndOf="@id/txtFast"
                    app:layout_constraintStart_toStartOf="@id/txtFast"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtFast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:text="Fastest"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/rich_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtFavs"
                    app:layout_constraintTop_toBottomOf="@id/fast" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/header_restaurants_browse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="@dimen/dimen_10_dp"
            android:text="@string/sample_restaurants_browse"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/listRestaurantsBrowse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerMenus" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRestaurantsBrowse"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/header_restaurants"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_restaurants_browse"
            tools:itemCount="7"
            tools:listitem="@layout/item_resturant_browse" />

        <TextView
            android:id="@+id/header_restaurants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="@dimen/dimen_10_dp"
            android:text="@string/sample_restaurants_nearby"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listRestaurantsBrowse" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRestaurants"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_restaurants"
            tools:itemCount="7"
            tools:listitem="@layout/item_resturants" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>