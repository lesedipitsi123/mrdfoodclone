<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="apps.studios.bt.mrdfoodclone.views.DraggableMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <ImageView
        android:id="@+id/map_pointer"
        android:layout_width="@dimen/dimen_48_dp"
        android:layout_height="@dimen/dimen_48_dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_map_pointer"
        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintEnd_toEndOf="@id/map"
        app:layout_constraintStart_toStartOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/baseline_arrow_back_black_24"
        android:layout_margin="@dimen/dimen_16_dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sheet_background"
        android:padding="@dimen/dimen_24_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/sheet_title"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:text="@string/title_location_sheet"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sheet_location"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginTop="@dimen/dimen_24_dp"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:background="@drawable/sheet_location_background"
            android:clickable="true"
            android:drawableStart="@mipmap/outline_place_black_24"
            android:drawablePadding="@dimen/dimen_16_dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_16_dp"
            android:paddingEnd="@dimen/dimen_16_dp"
            android:text="@string/sample_location"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/material_grey_900"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/btnSaveLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sheet_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveLocation"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="@dimen/dimen_8_dp"
            android:focusable="true"
            android:padding="@dimen/dimen_14_dp"
            android:text="@string/sample_save_location"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:backgroundTint="@color/material_yellow_500"
            app:cornerRadius="@dimen/dimen_10_dp"
            android:stateListAnimator="@animator/lift_on_touch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sheet_location"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>