<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="colorControlActivated">@color/material_amber_500</item>
        <item name="colorControlNormal">@color/rich_black</item>
        <item name="colorControlHighlight">@color/material_amber_500</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/background_splash
        </item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
       <item name="android:textColor">@android:color/transparent</item>
        <item name="android:animation">@android:anim/fade_out</item>
    </style>

</resources>
